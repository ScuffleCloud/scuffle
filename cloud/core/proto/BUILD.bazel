load("@npm//:defs.bzl", "npm_link_all_packages")
load("@protobuf//bazel:proto_library.bzl", "proto_library")
load("//misc/utils:proto_descriptor_set.bzl", "proto_descriptor_set")
load("//misc/utils/js:proto.bzl", "ts_proto")
load("//misc/utils/rust:manifest.bzl", "cargo_toml")
load("//misc/utils/rust:package.bzl", "scuffle_build_script", "scuffle_package")

npm_link_all_packages()

cargo_toml()

# Scuffle protos, used by both backend and frontend.
proto_library(
    name = "pb",
    srcs = glob(["scufflecloud/core/v1/**"]),
    strip_import_prefix = "/" + package_name(),
    visibility = ["//visibility:public"],
    deps = [
        "//crates/tinc:protobuf",
        "@protobuf//:descriptor_proto",
        "@protobuf//:duration_proto",
        "@protobuf//:empty_proto",
        "@protobuf//:timestamp_proto",
    ],
)

proto_descriptor_set(
    name = "tinc_fds",
    deps = [":pb"],
)

scuffle_build_script(
    name = "build_script",
    data = [":tinc_fds"],
    env = {
        "TINC_COMPILED_FD": "$(location :tinc_fds)",
    },
    deps = ["//crates/tinc/build"],
)

scuffle_package(
    srcs = ["lib.rs"],
    crate_name = "scufflecloud-core-proto",
    deps = [
        ":build_script",
        "//crates/tinc",
    ],
)

ts_proto(
    name = "pkg",
    protos = [
        ":pb",
    ],
)
