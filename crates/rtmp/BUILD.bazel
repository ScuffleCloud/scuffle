load("//misc/utils/rust:manifest.bzl", "cargo_toml")
load("//misc/utils/rust:package.bzl", "scuffle_example", "scuffle_package", "scuffle_test")

cargo_toml()

scuffle_package(
    compile_data = [
        ":CHANGELOG.md",
        ":Cargo.toml",
    ],
    crate_name = "scuffle-rtmp",
    proc_macro_deps = ["//crates/changelog"],
    test = scuffle_test(
        data = [
            "//tools/ffmpeg",
            "@scuffle_assets//:mp4",
        ],
        env = {
            "FFMPEG": "$(rootpath //tools/ffmpeg)",
            "ASSETS_DIR": "$(rootpath @scuffle_assets//:mp4)",
        },
        target_compatible_with = select({
            "@platforms//os:osx": ["@platforms//:incompatible"],
            "//conditions:default": [],
        }),
        deps = ["//crates/flv"],
    ),
    deps = [
        "//crates/amf0",
        "//crates/bytes-util",
        "//crates/context",
        "//crates/future-ext",
        "//crates/nutype-enum",
    ],
)

scuffle_example(
    name = "examples_basic",
    srcs = ["examples/basic.rs"],
)
