load("//misc/utils/rust:manifest.bzl", "cargo_toml")
load("//misc/utils/rust:package.bzl", "scuffle_example", "scuffle_package", "scuffle_test")

cargo_toml()

scuffle_package(
    compile_data = [
        ":CHANGELOG.md",
        ":Cargo.toml",
    ],
    crate_name = "scuffle-settings",
    proc_macro_deps = ["//crates/changelog"],
    test = scuffle_test(
        data = glob(["assets/*"]),
        env = {
            "ASSETS_DIR": "crates/settings/assets",
        },
    ),
    deps = ["//crates/bootstrap"],
)

scuffle_example(
    name = "examples_cli",
    srcs = ["examples/cli.rs"],
)
