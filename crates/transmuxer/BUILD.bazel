load("//misc/utils/rust:manifest.bzl", "cargo_toml")
load("//misc/utils/rust:package.bzl", "scuffle_package", "scuffle_test")

cargo_toml()

scuffle_package(
    compile_data = [
        ":CHANGELOG.md",
        ":Cargo.toml",
    ],
    crate_name = "scuffle-transmuxer",
    proc_macro_deps = ["//crates/changelog"],
    test = scuffle_test(
        data = [
            "//tools/ffmpeg:ffprobe",
            "@scuffle_assets//:flv",
        ],
        env = {
            "FFPROBE": "$(rootpath //tools/ffmpeg:ffprobe)",
            "ASSETS_DIR": "$(rootpath @scuffle_assets//:flv)",
        },
    ),
    deps = [
        "//crates/aac",
        "//crates/av1",
        "//crates/bytes-util",
        "//crates/flv",
        "//crates/h264",
        "//crates/h265",
        "//crates/mp4",
    ],
)
